(define (make-enemy-1 x y image)
  (let ((enemy (make <enemy> #:sprite (make-sprite image) #:health 50 #:points 100)))
    (set-position enemy x y)
    (set! (shot-sound enemy) (load-asset "enemy_shot.wav"))
    (center-sprite-image! (sprite enemy))
    (spiral-1 enemy)
    enemy))
